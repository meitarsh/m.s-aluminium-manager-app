<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ms_alum.azrieli_college_of_engineering.com.msamanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:label="@string/app_title"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/project_options_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_delete_activity"
            android:configChanges="orientation"
            android:label="@string/delete_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".project_options"
            android:configChanges="orientation"
            android:label="@string/project_options_decide"
            android:screenOrientation="portrait" />
        <activity
            android:name=".kablni_mishne_activity"
            android:configChanges="orientation"
            android:label="@string/project_options_1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".divohi_takalot_activity"
            android:configChanges="orientation"
            android:label="@string/project_options_2"
            android:screenOrientation="portrait" />
        <activity android:name=".loz_activity" android:configChanges="orientation" android:label="@string/project_options_3" android:screenOrientation="landscape"></activity>
    </application>

</manifest>