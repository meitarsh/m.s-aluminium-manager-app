<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context="com.example.chaosruler.msa_manager.activies.kablni_mishne_activity">

    <Button
        android:id="@+id/kablni_mishne_pshot"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/button_margin_divohi_takalot"
        android:layout_marginTop="@dimen/button_margin_divohi_takalot"
        android:background="@drawable/button_sample1"
        android:text="@string/kablni_mishne_tavla_pshota" />

    <Button
        android:id="@+id/kablni_mishne_ntonim_hodshiim"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/button_margin_divohi_takalot"
        android:background="@drawable/button_sample1"
        android:text="@string/kablni_mishne_hodshiim"
        android:visibility="gone" />

    <Button
        android:id="@+id/kablni_mishne_pirot"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/button_margin_divohi_takalot"
        android:background="@drawable/button_sample1"
        android:text="@string/kablni_mishne_pirot" />

</LinearLayout>
