<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chaosruler.msa_manager.project_options"
    android:layoutDirection="ltr"
    >
    <Button
        android:id="@+id/project_options_btn_kablni_mishne"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:background="@drawable/button_sample1"
        android:text="@string/project_options_1" />

    <Button
        android:id="@+id/project_options_btn_divohi_takalot"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/project_options_btn_kablni_mishne"
        android:layout_below="@+id/project_options_btn_kablni_mishne"
        android:layout_marginTop="66dp"
        android:background="@drawable/button_sample1"
        android:text="@string/project_options_2" />

    <Button
        android:id="@+id/project_options_btn_loz"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/project_options_btn_divohi_takalot"
        android:layout_below="@+id/project_options_btn_divohi_takalot"
        android:layout_marginTop="77dp"
        android:background="@drawable/button_sample1"
        android:text="@string/project_options_3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/project_options_btn_loz">

        <TextView
            android:id="@+id/activity_project_test_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</RelativeLayout>
