<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:focusable="true"
    >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:scrollbars="horizontal|vertical"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:focusable="true"
                >


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cell_height"
                    android:isScrollContainer="true"
                    android:layoutDirection="rtl"
                    android:scrollbars="horizontal|vertical"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:focusable="true"
                    >


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/small_margin_cells"
                        android:layout_marginStart="@dimen/small_margin_cells"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/edit_table_vendor_id"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/small_margin_cells"
                        android:layout_marginStart="@dimen/small_margin_cells"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/edit_table_vendor_DATAARAEID"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/small_margin_cells"
                        android:layout_marginStart="@dimen/small_margin_cells"
                        android:layout_weight="1"

                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:text="@string/edit_table_vendor_name"
                        android:textStyle="bold" />


                </LinearLayout>


                <ListView
                    android:id="@+id/table_vendor_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:isScrollContainer="true"
                    android:layoutDirection="rtl"
                    android:scrollbars="horizontal|vertical"
                    />
            </LinearLayout>


    </HorizontalScrollView>
</LinearLayout>
