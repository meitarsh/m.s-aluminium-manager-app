<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chaosruler.msa_manager.activies.kablan_pashot_activity.kablan_pashot"
    >


    <ListView
        android:id="@+id/activity_kablan_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_kablan_pashot_linear" />

    <LinearLayout
        android:id="@+id/activity_kablan_pashot_linear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        >
        <TextView
            android:id="@+id/activity_kablan_pashot_hoza"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:text="@string/kablan_pashot_hoza_str"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/activity_kablan_pashot_peola"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:text="@string/kablan_pashot_peola_str"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/activity_kablan_pashot_ahoz_peola"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:text="@string/kablan_pashot_ahoz_peola_str"
            android:gravity="center"
            />
    </LinearLayout>


</RelativeLayout>
