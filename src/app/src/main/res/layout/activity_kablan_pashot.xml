<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="horizontal|vertical"
        tools:ignore="UselessParent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:isScrollContainer="true"
                android:layoutDirection="rtl"
                android:orientation="vertical"
                android:scrollbars="horizontal|vertical"
                >


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cell_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:isScrollContainer="true"
                    android:layoutDirection="rtl"
                    android:scrollbars="horizontal|vertical"
                    tools:ignore="ExtraText">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/small_margin_cells"
                        android:layout_marginStart="@dimen/small_margin_cells"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/kablan_pashot_hoza_str"
                        android:textStyle="bold" />
                    />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/small_margin_cells"
                        android:layout_marginStart="@dimen/small_margin_cells"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/kablan_pashot_peola_str"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/small_margin_cells"
                        android:layout_marginStart="@dimen/small_margin_cells"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:lines="1"
                        android:text="@string/kablan_pashot_ahoz_peola_str"
                        android:textStyle="bold" />
                </LinearLayout>


                <ListView
                    android:id="@+id/kablan_pashot_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:isScrollContainer="true"
                    android:layoutDirection="rtl"
                    android:scrollbars="horizontal|vertical" />
            </LinearLayout>


    </HorizontalScrollView>
</LinearLayout>
