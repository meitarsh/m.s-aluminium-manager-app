        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_bottom_spinner_all_activities"
        android:layout_marginTop="@dimen/margin_top_bottom_spinner_all_activities"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/kablan_mforat_spinner_txt" />

        <Spinner
            android:id="@+id/activity_kablan_mforat_spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>


